<h1>Add a Contact</h1>
<%= form_for @person, url: {action: "#{@url}"} do |f| %>
  <fieldset>
    <legend> <%= @legend %></legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </fieldset>
  <%= f.submit %>
<% end %>
