<h1>Contact Details</h1>
<ul>
  <li><%= @person.name %></li>
  <li><%= @person.title %></li>
  <li><%= @person.email %></li>
</ul>
<%= link_to "Edit Contact", edit_company_person_path(company_id: @person.company_id, :id => @person.id) %>
<%= link_to "Delete Contact", company_person_path(params[:company_id], params[:id]), :method => :delete,
      data: { confirm: "Are you sure you want to delete this contact?"} %>
<%= link_to "Back to List of Companies", companies_path %>
