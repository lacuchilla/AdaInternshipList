<% if !flash.now[:error].nil? %>
  <%= flash.now[:error] %>
<% end %>

<h3>Sign-up:</h3>
<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <br>
  <%= f.submit "Register" %>
<% end %>
