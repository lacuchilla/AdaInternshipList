<h1>Here's the Company!</h1>
<ul>
  <li><%= @company.name %></li>
  <li><%= @company.location %></li>
  <li><%= @company.description %></li>
  <li><%= link_to @company.website, "#{@company.website}" %></li>
</ul>
<%= link_to "Edit Company", "/companies/#{@company.id}/edit" %>
<%= link_to "Delete Company", "/companies/#{@company.id}", :method => :delete,
      :onclick => "return confirm('Are you sure you want to delete this company?')" %>
<%= link_to "View People Associated With This Company", company_people_path %>
